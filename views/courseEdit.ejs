<%- include('header') %>
    <%- include('navbar') %>
        <div class="card mt-5"
            style="width: 70%; margin-left: 15%; border-radius: 2rem; background-color: rgb(169, 184, 197);"></div>
        <div class="container" style="margin-top: 70px;">
            <div class="row">
                <div class="modal-body">

                    <form class="center" action="/course_update/<%= d._id %>" method="post" style="margin-left: 30%;">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <!-- <label for="inputEmail4">Email</label> -->
                                <label>Name:</label>
                                <input type="text" class="form-control mt-3" name="name" value="<%= d.name %>"
                                    placeholder="Name" />
                            </div>
                            <div class="form-group col-md-6">
                                <label>Email:</label>
                                <!-- <label for="inputPassword4">Password</label> -->
                                <input type="email" class="form-control mt-3" name="email" value="<%= d.email %>"
                                    placeholder="Email" />
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Phone:</label>
                            <!-- <label for="inputAddress">Address</label> -->
                            <input type="number" class="form-control mt-3" name="phone" value="<%= d.phone %>"
                                placeholder="Number" />
                        </div>

                        <div class="form-group col-md-6">
                            <label>City:</label>
                            <!-- <label for="inputAddress">Address</label> -->
                            <input type="type" class="form-control mt-3" name="city" value="<%= d.city %>"
                                placeholder="City" />
                        </div>
                        <div class="form-group col-md-6">
                            <label>Address:</label>
                            <!-- <label for="inputAddress">Address</label> -->
                            <input type="type" class="form-control mt-3" name="address" value="<%= d.address %>"
                                placeholder="Address" />
                        </div>
                        <div class="form-group col-md-6">
                            <label>Course:</label>
                            <!-- <label for="inputAddress">Address</label> -->
                            <input type="type" class="form-control mt-3" name="course" value="<%= d.course %>"
                                placeholder="Course" />
                        </div>
                        <button type="submit" class="btn btn-primary col-md-6 mt-3" style="margin-bottom: 20px;">
                            Update
                        </button>
                    </form>

                </div>
            </div>
        </div>
        </div>
        <%- include('footer') %>
            <%- include('script') %>